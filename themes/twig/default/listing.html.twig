{% extends "layout.html.twig" %}
{% block main %}
{% if content.listing is empty %}
      <h2>{{ i18n.getText('no_posts_found') }}</h2>
{% else %}
{% for item in content.listing %}
      <article>
        <header>
          <h2><a href="{{ item.key }}">{{ item.title }}</a></h2>
          <time datetime="">{{ item.date }}</time>
        </header>
      </article>
{% endfor %}
{% endif %}
{% endblock %}